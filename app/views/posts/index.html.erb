<div id="header">
<h1>My Blawg</h1>
<%= link_to 'Create A New Post', new_post_path, :class=> "button", :id=> "newPost" %>
</div> 
<div style="clear:both;"></div> 
<div id="formBox">
  <%= render 'form' %><br />
  <a href="/" id="closePost">Nevermind</a>
</div>
<% @posts.each do |post| %>
  <div class="post">
    <div class="postTop">
      <h2><%= post.title %></h2>
      By:&nbsp;<%= post.user %> 
      <div class="timestamp"><%= post.posted_at %></div>
      <div style="float:right;">
        <%= link_to 'Edit', edit_post_path(post) %>&nbsp;|&nbsp;
        <%= link_to 'Delete Post', post, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    </div>
    <div class="postBtm">      
      <%= post.content %>                  
    </div>
  </div>
<% end %>
<script>
$(function(){
  $('#newPost,#closePost').on('click',function(event){
    $('#formBox').slideToggle();
    event.preventDefault();
    return false;
  })
})
</script>

